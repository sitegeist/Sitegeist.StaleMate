{
    "description": "Cache with stale period and asynchronous updates",
    "type": "neos-package",
    "name": "sitegeist/stalemate",
    "license": "GPL-3.0+",
    "require": {
        "neos/flow": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.78",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Sitegeist\\StaleMate\\": "Classes/"
        }
    },
    "extra": {
        "neos": {
            "package-key": "Sitegeist.StaleMate"
        }
    },
    "scripts": {
        "test:lint-fix": ["vendor/bin/phpcbf --standard=PSR12 Classes"],
        "test:lint": ["vendor/bin/phpcs --standard=PSR12 -n Classes"],
        "test:stan": ["vendor/bin/phpstan analyse Classes"],
        "test": ["composer install", "composer  test:lint", "composer  test:stan"]
    },
    "config": {
        "allow-plugins": {
            "neos/composer-plugin": true
        }
    }
}
